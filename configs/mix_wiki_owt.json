{
    "name": "mix_wiki_owt",
    "description": "Balanced mix: Wikipedia + OpenWebText",
    "model": {
        "hidden_size": 256,
        "num_layers": 3,
        "num_heads": 4,
        "seq_length": 256
    },
    "train": {
        "train_tokens": 40000000,
        "eval_tokens": 2000000,
        "per_gpu_batch_size": 96,
        "accumulation_steps": 6,
        "lr": 0.0005,
        "weight_decay": 0.01,
        "fused_adamw": false,
        "grad_checkpointing": false,
        "num_workers": 2,
        "prefetch_factor": 2
    },
    "data": {
        "sources": [
            "wikipedia",
            "openwebtext"
        ],
        "min_text_length": 50
    }
}