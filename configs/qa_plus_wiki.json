{
    "name": "qa_plus_wiki",
    "description": "Natural Questions + Wikipedia mix; Q/A first to ensure coverage",
    "model": {
        "hidden_size": 256,
        "num_layers": 3,
        "num_heads": 4,
        "seq_length": 256
    },
    "train": {
        "train_tokens": 100000000,
        "eval_tokens": 2000000,
        "per_gpu_batch_size": 128,
        "accumulation_steps": 4,
        "lr": 0.0005,
        "weight_decay": 0.01,
        "fused_adamw": false,
        "grad_checkpointing": false,
        "num_workers": 2,
        "prefetch_factor": 2
    },
    "data": {
        "sources": [
            {
                "type": "hf",
                "dataset": "sentence-transformers/natural-questions",
                "split": "train",
                "fields": [
                    "question",
                    "answer",
                    "answers"
                ],
                "format": "Q: {question}\nA: {answer}{answers}"
            },
            "wikipedia"
        ],
        "min_text_length": 50
    }
}