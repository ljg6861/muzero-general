{
    "name": "c4",
    "description": "DialoGPT-medium tokenizer; SimpleLM 256/3/4; C4-en stream",
    "model": {
        "hidden_size": 256,
        "num_layers": 3,
        "num_heads": 4,
        "seq_length": 256
    },
    "train": {
        "train_tokens": 50000000,
        "eval_tokens": 2000000,
        "per_gpu_batch_size": 64,
        "accumulation_steps": 8,
        "lr": 0.0004,
        "weight_decay": 0.01,
        "fused_adamw": false,
        "grad_checkpointing": true,
        "num_workers": 2,
        "prefetch_factor": 2
    },
    "data": {
        "sources": [
            "c4"
        ],
        "min_text_length": 50
    }
}