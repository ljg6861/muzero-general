{
    "name": "mix_c4_owt_books",
    "description": "Diverse mix: C4 + OpenWebText + BookCorpus",
    "model": {
        "hidden_size": 256,
        "num_layers": 3,
        "num_heads": 4,
        "seq_length": 256
    },
    "train": {
        "train_tokens": 60000000,
        "eval_tokens": 3000000,
        "per_gpu_batch_size": 64,
        "accumulation_steps": 8,
        "lr": 0.00035,
        "weight_decay": 0.01,
        "fused_adamw": false,
        "grad_checkpointing": true,
        "num_workers": 2,
        "prefetch_factor": 2
    },
    "data": {
        "sources": [
            "c4",
            "openwebtext",
            "bookcorpus"
        ],
        "min_text_length": 50
    }
}